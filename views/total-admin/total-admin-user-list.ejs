<div class="table-wrap">
    <table class="table user-list-table">
        <caption>유저관리 테이블</caption>
        <colgroup>
            <col style="width: 50px">
            <col style="width:10%">
            <col style="width:15%">
            <col style="width:15%">
            <col style="width:10%">
            <col style="width:20%">
            <col style="width:10%">
            <col style="width:15%">
        </colgroup>
        <thead>
        <tr>
            <th scope="col">선택</th>
            <th scope="col" class="btn-list-array" onclick="changeOrderType(<%= pageNo %>)">등록일</th>
            <th scope="col">유형</th>
            <th scope="col">닉네임</th>
            <th scope="col">이름</th>
            <th scope="col">아이디</th>
            <th scope="col">현황</th>
            <th scope="col">정보</th>
        </tr>
        </thead>
        <tbody>
        <% for(let i = 0; i < member.length; i++) { %>
        <tr>
            <th scope="row">
                <input type="checkbox" pk="<%= member[i].mem_pk %>">
            </th>
            <td><%= member[i].mem_created%></td>
            <% if(member[i].user_type === 0) {%>
                <td>일반</td>
            <% }else if(member[i].user_type === 1) {%>
                <td>채널관리자</td>
            <% } %>
            <td><%= member[i].mem_nickname %></td>
            <td><%= member[i].mem_name %></td>
            <td><%= member[i].mem_id %></td>
            <% if(member[i].flag_status === 0){%>
                <td>사용중</td>
            <% } else if(member[i].flag_status === 1){ %>
                <td>탈퇴</td>
            <% } else if(member[i].flag_status === 2){ %>
                <td>신고 계정</td>
            <% } %>
            <td><button type="button" class="user-info-btn" data-toggle="modal" onclick="showMemberDetail(<%= member[i].mem_pk %>)">보기</button></td>
        </tr>
        <% } %>
        </tbody>
    </table>
</div>
<div style="width:100%;">
    <nav>
        <ul class="pagination justify-content-center">
            <% if(yn_prev === 1) { %>
                <li class="page-item"><a class="page-link" href="javascript:void(0);" onclick="getList(<%= parseInt(pageNo)-1 %>)">이전</a></li>
            <% } %>
            <% for(let page = startPage; page <= endPage; page++) { %>
                <% if(page == pageNo) { %>
                    <li class="page-item active"><a class="page-link" href="javascript:void(0);" onclick="getList(<%= page %>)"><%= page %></a></li>
                <% } else { %>
                    <li class="page-item"><a class="page-link" href="javascript:void(0);" onclick="getList(<%= page %>)"><%= page %></a></li>
                <% } %>
            <% } %>
            <% if(yn_next === 1) { %>
                <li class="page-item"><a class="page-link" href="javascript:void(0);" onclick="getList(<%= parseInt(pageNo)+1 %>)">다음</a></li>
            <% } %>
        </ul>
    </nav>
</div>
