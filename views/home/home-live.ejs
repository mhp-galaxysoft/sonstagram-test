    function enterSearch(){
        if(window.event.keyCode === 13){
            getLiveList(1)
        }
    }
    liveSearchText.addEventListener('keydown',enterSearch)
    liveSearchBtn.addEventListener('click',getLiveList)
    liveSortType.addEventListener('change', function() {
